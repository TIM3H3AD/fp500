<%= provide(:title, "Home") %>
<div class="intro-header">
  <div class="container">

    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <small><%= Time.now %> </small>
<h2>Farmers' & Pirates'</h2>
<p>The F & P {<%= Thing.count %>} <br>

"Swimmmingly good listings"
</p>
          <hr class="intro-divider">
          <ul class="list-inline intro-social-buttons">

            <% if !logged_in? %>
                <li>
                  <%= link_to signup_path, class: "btn btn-default btn-lg" do %>
                      <span class="network-name">Sign Up!</span>
                  <% end %>
                </li>
            <% else %>
                <li>
                  <%= link_to new_thing_path, class: "btn btn-default btn-lg" do %>
                     <span class="network-name">Make-A-Thing</span>
                  <% end %>
                </li>

            <% end %>
          </ul>

		  
		  
		  
        </div>
      </div>
    </div>
  </div>
</div>