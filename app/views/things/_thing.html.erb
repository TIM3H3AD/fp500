<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-10 ">
    <% @created_things.each do |thing| %>
    <div class="well border-blue" style="background: whitesmoke;"><
	  <h20>
      <%= link_to thing.title, thing_path(thing), class: 'custom-hover2', style: 'text-decoration: none;color:black;' %>
      </h20>
	  <br>
      <h20>
      <%= number_to_currency(thing.price, :unit => "$") %>
      </h20>
      <br>
      <h21>
	  <%= thing.location %>
	  </h21>
      <% if current_user == thing.creator %>
          <div class="col-md-4 col-sm-12">
            <%= link_to "Edit", edit_thing_path(thing), class: 'btn btn-block btn-warning' %>
          </div>
          <div class="col-md-4 col-sm-12">
            <%= link_to "Delete", thing, method: :delete, data: {confirm: true}, class: 'btn btn-block btn-danger' %>
     	  </div>
	  <% end %>
      
    </div>
	 <% end %>  
  </div>

</div>
